# Database Configuration
# Format: username:password@tcp(host:port)/database?charset=utf8mb4&parseTime=True&loc=Local
DATABASE_URL="root:your_mysql_password@tcp(localhost:3306)/acap_dev?charset=utf8mb4&parseTime=True&loc=Local"

# JWT Secret Key
# Generate with: openssl rand -base64 32
# IMPORTANT: Change this in production!
JWT_SECRET="your-32-plus-character-secret-key-here-change-in-production"

# Admin Whitelist
# Comma-separated list of admin emails
ADMIN_WHITELIST="admin@example.com,admin2@example.com"

# Server Configuration
PORT=8080

# CORS Configuration
FRONTEND_URL="http://localhost:3000"

# Environment
# Options: development, staging, production
ENVIRONMENT="development"

# Redis Configuration
# Format: host:port
REDIS_URL="localhost:6379"
REDIS_PASSWORD=""
